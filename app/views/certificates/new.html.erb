<section class="section">
  <div class="container">
    <div class="col col-12">
      <% flash.each do |_, msg| %>
        <div class="alert alert-secondary">
          <p class="text-center"> <%= msg %> </p>
        </div>
      <% end %>
      <% if @participant.errors.any? %>
        <div class="alert alert-danger">
          <p class="text-danger">
            <ul>
              <% @participant.errors.full_messages.each do | message | %>
                <li> <%= message %> </li>
              <% end %>
            </ul>
          </p>
        </div>
      <% end %>
      <h2>Emitir certificado de participação</h2>
      <p>
        Preencha os campos abaixo para poder emitir seu certificado de partipação do treinamento <span
          class="text-featured">Flask Masterclass</span>.</p>
    </div>
    
    <div class="col col-12">
      <div class="card margin-top-large">
        <div class="card-body">
          <div class="card-text">
            <%= form_with model: @participant, url: certificates_path, local: true, data: { turbo: false } do | form | %>
              <form action="">
                <div class="row">
                  <div class="col-12 col form-group">
                    <%= form.label :name %>
                    <%= form.text_field :name, class: 'input-block', placeholder: 'Insira o nome completo' %>
                  </div>
                  <div class="col-12 col form-group">
                    <%= form.label :email %>
                    <%= form.text_field :email, class: 'input-block', placeholder: 'Insira seu e-mail' %>
                  </div>
                  <div class="col-12 col form-group">
                    <%= form.submit 'Emitir certificado', class: 'btn-primary btn-small btn-block' %>
                  </div>
                </div>
              </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>